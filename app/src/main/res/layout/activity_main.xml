<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

        <EditText
            android:id="@+id/expressionField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text">
        </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Результат:"
            android:gravity="right"/>
        <EditText
            android:id="@+id/resultField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button style="@style/ButtonStyle"
            android:text="("
            android:onClick="onClick" />
        <Button style="@style/ButtonStyle"
            android:text=")"
            android:onClick="onClick" />
        <Button style="@style/ButtonStyle"
            android:text="C"
            android:onClick="onAllDeleteClick" />
        <Button style="@style/ButtonStyle"
            android:text="←"
            android:onClick="onShortDeleteClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button style="@style/ButtonStyle"
            android:text="7"
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="8"
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="9"
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="/"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button style="@style/ButtonStyle"
            android:text="4"
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="5"
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="6"
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="*"
            android:onClick="onClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button style="@style/ButtonStyle"
            android:text="1"
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="2"
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="3"
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="+"
            android:onClick="onClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button style="@style/ButtonStyle"
            android:text="0"
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="."
            android:onClick="onClick"/>
        <Button style="@style/ButtonStyle"
            android:text="="
            android:onClick="onResultClick"/>
        <Button style="@style/ButtonStyle"
            android:text="-"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>